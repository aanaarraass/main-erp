<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">

        <xpath expr="//div[@class='pos-receipt']/t[1]" position="replace">
            <table style="width:100%; height:150px;text-align:center;">
                <div class="row ba c">
                    <t t-if="receipt.company.logo">
                <img class="pos-receipt-logo" t-att-src="receipt.company.logo" alt="Logo"/>

                     <h8><p>Purchase Slip</p> </h8>
                    <h2 class="pos-receipt-center-align">
                    <t t-esc="receipt.company.name" />
                </h2>
                        <font>Main Satiana Road Toll Tax Faisalabad</font>
            </t>
<br/>
                    <strong>
                        Tel:
                    <t t-if="receipt.company.phone" t-esc="receipt.company.phone"/>
                        <t t-else=""><span> </span></t>

                        <t t-if="receipt.company.mobile" t-esc="receipt.company.mobile"/>
                        <t t-else=""><span> </span></t>
                </strong>


                    <td style="border:0px solid black;word-wrap: break-word;">
                   </td>

</div>
            </table>


        </xpath>
        <xpath expr="//div[@class='pos-receipt-contact']" position="replace">
           <div>
                <t t-call="PosCustomAddress"/>
           </div>
        </xpath>
        <xpath expr="//div[@class='orderlines']" position="replace">
                <div>
                    <t t-call="OrderLinesReceiptInherit"/>
                </div>
        </xpath>


