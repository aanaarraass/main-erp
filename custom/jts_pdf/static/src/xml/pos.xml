        <!--              </div>-->
        <!--        </xpath>-->
        <!--        <<<>>>>>>>-->

    </t>
    <t t-name="PosCustomAddress" owl="1">
         <style>
            .ba{
            border-bottom:1px dashed #494949;
            }
            .bb{
            border-bottom:1px solid black
            }
            .c{
            text-align:center;
            }
            .table{
            width:100%;
            }
            .l{
            text-align:left;
            }
             .w2{
             width:20%
             }


        </style>


    </t>
    <t t-name="OrderLinesReceiptInherit" owl="1">
         <table class="table ba c">
             <thead>
                 <tr>
                    <th class="ba">Sr.</th>
                     <th class="ba">Product</th>
                     <th class="ba">Qty</th>
                     <th class="ba">Price</th>


                     <th class="ba">Total</th>

                 </tr>
             </thead>
             <t t-set="i" t-value="0"/>
             <t t-foreach="receipt.orderlines" t-as="line" t-key="line.id">
                  <t t-set="i" t-value="i + 1"/>
                 <tbody>
                 <tr>
                     <td class="ba"><span t-esc="i"/></td>
                     <td class="ba"><t t-esc="line.product_name_wrapped[0]"/></td>
                     <td class="ba"><t t-esc="line.quantity"/></td>
                     <!--                                          <t t-set="tax_amount" t-value="line.price_subtotal_incl - line.price_subtotal"/>-->
                     <td class="ba"><t t-esc="env.pos.format_currency_no_symbol(line.price)"/>
                         <td class="ba">
                         <t t-esc="line.tax_amount"/>
</td>
</td>
                     <!--&lt;!&ndash;                     <t t-set="current_subtotal" t-value="0"/>-->

                     <td class="ba"><span t-esc="env.pos.format_currency_no_symbol(line.price_display)" class="price_display pos-receipt-right-align"/></td>
                 </tr>

             </tbody>
             </t>
         </table>


     </t>
</templates>

