<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_zoommeeting_form" model="ir.ui.view">
            <field name="name">zoom.meeting.form</field>
            <field name="model">zoom.meeting</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Meetings">
                    <sheet>
                        <group col="2">
                            <group>
                                <field name="name" required="1"/>
                                <field name="meeting_id" invisible="1"/>
                                <field name="apw" required="1"/>
                            </group>
                            <group>
                                <field name="user_id" readonly="1"/>
                                <field name="invite_via_email" readonly="0"/>

                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Create Meeting" class="oe_highlight" type="object" name="create_meeting"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_zoommeeting_view">
            <field name="name">Meetings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">zoom.meeting</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_zoommeeting_view_form">
            <field name="act_window_id" ref="act_open_zoommeeting_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_zoommeeting_form"/>
        </record>
    </data>
</odoo>
